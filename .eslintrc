{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false
    }
  },
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": 0
  }
}
